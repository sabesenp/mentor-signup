rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/profiles/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.admin == true;
    }

    match /mentorApplications/{docId} {
      allow create: if request.resource.data.name is string
                    && request.resource.data.email is string
                    && request.resource.data.linkedin is string
                    && request.resource.data.timezone is string
                    && request.resource.data.skills is list
                    && request.resource.data.years is int
                    && request.resource.data.bio is string
                    && request.resource.data.consent == true;
      allow read, list, update, delete: if isAdmin();
    }

    match /profiles/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
